name: Update README with Server Status

on:
  schedule:
    - cron: '*/30 * * * *' # Toutes les 30 minutes
  workflow_dispatch: # ExÃ©cution manuelle
  push:
    paths:
      - 'servers.json'
      - 'configs.yaml'

jobs:
  update:
    runs-on: ubuntu-latest
    permissions:
      contents: write

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Set up Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'

      - name: Install your package
        run: npm install servers-status-updater

      - name: Run update
        run: npx servers-status-updater

      - name: Commit and push changes
        run: |
          git config user.name 'github-actions'
          git config user.email 'github-actions@users.noreply.github.com'
          git add README.md
          git commit -m 'ðŸ”„ Update server status [skip ci]' || echo "No changes"
          git push https://github-actions:${{ secrets.GITHUB_TOKEN }}@github.com/${{ github.repository }} HEAD:main